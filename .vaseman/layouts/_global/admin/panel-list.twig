{% extends "_global/admin/panel.twig" %}

{% block toolbar %}
    <div class="col-lg-12">
        {% block buttons %}
            <a class="btn btn-success" href="edit.html">
                <i class="glyphicon glyphicon-plus"></i>
                New
            </a>

            <a class="btn btn-primary" href="edit.html">
                <i class="glyphicon glyphicon-edit"></i>
                Edit
            </a>

            <a class="btn btn-info" href="#">
                <i class="glyphicon glyphicon-ok"></i>
                Publish
            </a>

            <a class="btn btn-info" href="#">
                <i class="glyphicon glyphicon-remove-circle"></i>
                Unublish
            </a>

            <a class="btn btn-info" href="#">
                <i class="glyphicon glyphicon-check"></i>
                Check-in
            </a>

            <a class="btn btn-info" href="#">
                <i class="glyphicon glyphicon-th-large"></i>
                Batch
            </a>

            <a class="btn btn-danger" href="#">
                <i class="glyphicon glyphicon-trash"></i>
                Trash
            </a>
        {% endblock %}
    </div>
{% endblock %}

{% block search %}
    <div class="input-group">
        <input class="form-control" type="text" placeholder="Search" />
        <span class="input-group-btn">
            <button type="button" class="btn btn-default"><i class="glyphicon glyphicon-search"></i></button>
            <button type="button" class="btn btn-default"><i class="glyphicon glyphicon-remove"></i></button>
        </span>
    </div>
{% endblock %}

{% block filter %}
    <div class="form-group">
        <select class="form-control">
            <option value="">- Select State -</option>
            <option value="0">Published</option>
            <option value="1">Unpublished</option>
            <option value="-1">Trashed</option>
        </select>
    </div>

    <div class="form-group">
        <select class="form-control">
            <option value="">- Select Category -</option>
        </select>
    </div>
{% endblock %}