{% extends '_global/html.twig' %}

{% block title %}{{ config.title }} | Windwalker - A Modern PHP Framework{% endblock %}

{% block banner %}
    <div class="uk-container uk-container-center banner-inner-title">
        <h1>{{ config.title }}</h1>
    </div>
{% endblock %}

{% block body %}
    <div class="uk-container uk-container-center">
        <div class="uk-grid">
            {% block submenu %}{% endblock %}

            <div class="uk-width-medium-3-4 uk-container-center">
                <article class="article-content">
                    {{ content|raw }}
                    {% block article_footer %}{% endblock %}
                </article>
            </div>
        </div>
    </div>
{% endblock %}
